/* -------------------------------------------------------------------------
 *
 * Typography: Anchors
 *
 * ------------------------------------------------------------------------- */

a {

	/* -------------------------------------------------------------------------
	 * Anchor: Inline Links
	 *
	 * Note: Not in theme.json as the selector needs to be more specific
	 * ------------------------------------------------------------------------- */

	.wp-block-post-content &:not([class]) {

		@mixin a-link;
	}
}

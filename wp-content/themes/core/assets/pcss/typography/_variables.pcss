/* -------------------------------------------------------------------------
 *
 * Variables: Typography
 *
 * ------------------------------------------------------------------------- */

:root {

	/* -------------------------------------------------------------------------
	 * Font Families
	 * ------------------------------------------------------------------------- */

	--font-family-serif: serif;
	--font-family-sans-serif: var(--wp--preset--font-family--inter);

	/* -------------------------------------------------------------------------
	 * Font Size Scale
	 * ------------------------------------------------------------------------- */

	--font-size-90: var(--wp--preset--font-size--90);
	--font-size-80: var(--wp--preset--font-size--80);
	--font-size-70: var(--wp--preset--font-size--70);
	--font-size-60: var(--wp--preset--font-size--60);
	--font-size-50: var(--wp--preset--font-size--50);
	--font-size-40: var(--wp--preset--font-size--40);
	--font-size-30: var(--wp--preset--font-size--30);
	--font-size-20: var(--wp--preset--font-size--20);
	--font-size-10: var(--wp--preset--font-size--10);

	/* -------------------------------------------------------------------------
	 * Font Weights
	 * ------------------------------------------------------------------------- */

	--font-weight-regular: var(--wp--custom--font-weight--regular);
	--font-weight-bold: var(--wp--custom--font-weight--bold);

	/* -------------------------------------------------------------------------
	 * Text Decoration
	 * ------------------------------------------------------------------------- */

	--text-decoration-thickness: 0.06em;

	/* -------------------------------------------------------------------------
	 * Font Selection
	 * ------------------------------------------------------------------------- */

	::selection {
		background-color: var(--color-selection-highlight);
	}
}

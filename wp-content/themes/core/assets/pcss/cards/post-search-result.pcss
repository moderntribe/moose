/* -------------------------------------------------------------------------
 *
 * Search Result Post Card
 *
 * Minimal styles related to the search result post cards
 *
 * ------------------------------------------------------------------------- */

/* -----------------------------------------------------------------------
 * Search Result Post Card - Wrapper
 * Handles hover / focus states
 * Relatively positioned so that our link overlay can be contained
 * ----------------------------------------------------------------------- */

.c-search-card {
	container: searchcard / inline-size;
	position: relative;
	padding: var(--spacer-50) 0;
	border-top: 1px solid var(--search-results-card-border-color);
}

/* -----------------------------------------------------------------------
 * Search Result Post Card - Image
 * ----------------------------------------------------------------------- */

.c-search-card__image {
	width: 22%;
	float: right;
	margin-left: var(--spacer-40);
	overflow: hidden;

	& img {
		transition: var(--transition);

		.c-search-card:hover &,
		.c-search-card:focus-within & {
			transform: scale(1.05);
		}
	}

	/* add some space below the image when the text could wrap */
	@container searchcard (max-width: 900px) {
		margin-bottom: var(--spacer-20);
	}

	/* in smaller containers, make the image larger */
	@container searchcard (max-width: 450px) {
		width: 40%;
	}
}

/* -----------------------------------------------------------------------
 * Search Result Post Card - Post Type
 * ----------------------------------------------------------------------- */

.c-search-card__post-type {
	margin-top: 0 !important;
	margin-bottom: var(--spacer-10) !important;
}

/* -----------------------------------------------------------------------
 * Search Result Post Card - Title
 * ----------------------------------------------------------------------- */

.c-search-card__title {
	margin-top: 0 !important;
	margin-bottom: var(--spacer-10) !important;

	.c-search-card:hover &,
	.c-search-card:focus-within & {

		@mixin t-transparent-underline-hover;
	}
}

/* -----------------------------------------------------------------------
 * Search Result Post Card - Metadata
 * ----------------------------------------------------------------------- */

.c-search-card__metadata {
	display: flex;
	flex-wrap: wrap;
	gap: 0 8px;
	margin-top: 0 !important;
	margin-bottom: var(--spacer-10) !important;
	font-size: 0;
	line-height: 1;
}

/* -----------------------------------------------------------------------
 * Search Result Post Card - Excerpt
 * ----------------------------------------------------------------------- */

.c-search-card__excerpt {
	margin-top: 0 !important;
}

/* -----------------------------------------------------------------------
 * Search Result Post Card - Visible Permalink
 * ----------------------------------------------------------------------- */

.c-search-card__visible-permalink {
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
	overflow: hidden;
	margin-top: var(--spacer-10) !important;
	color: var(--search-results-card-visible-permalink-color);
	font-weight: var(--font-weight-bold);
	text-overflow: ellipsis;
	word-break: break-all;
}

/* -----------------------------------------------------------------------
 * Search Result Post Card - Link Overlay
 * ----------------------------------------------------------------------- */

.c-search-card__link-overlay {
	width: 100%;
	height: 100%;
	position: absolute;
	top: 0;
	left: 0;
	cursor: pointer;

	&:focus-visible {

		@mixin focus-visible;
	}

	.editor-styles-wrapper & {
		display: none;
	}
}

/* -------------------------------------------------------------------------
 *
 * Post Card
 *
 * ------------------------------------------------------------------------- */

.c-post-card {
	position: relative;
	container: postcard / inline-size;

	&.c-post-card--layout-horizontal {
		border-top: 1px solid var(--color-border, #000);
		padding-top: var(--cards-query-interior-padding, 40px);

		/* Column-end borders for horizontal layout cards. Default: single column (mobile) - all cards get bottom border */
		li:last-child & {
			border-bottom: 1px solid var(--color-border, #000);
			padding-bottom: var(--cards-query-interior-padding, 40px);
		}

		/* Tablet: columns-2 and columns-4 both display as 2 columns */
		.columns-2 li:nth-last-child(-n+2) &,
		.columns-4 li:nth-last-child(-n+2) & {

			@media (--mq-tablet) {
				border-bottom: 1px solid var(--color-border, #000);
				padding-bottom: var(--cards-query-interior-padding, 40px);
			}
		}

		/* Desktop: columns-3 displays as 3 columns */
		.columns-3 li:nth-last-child(-n+3) & {

			@media (--mq-desktop) {
				border-bottom: 1px solid var(--color-border, #000);
				padding-bottom: var(--cards-query-interior-padding, 40px);
			}
		}

		/* Desktop: columns-4 displays as 4 columns */
		.columns-4 li:nth-last-child(-n+4) & {

			@media (--mq-desktop) {
				border-bottom: 1px solid var(--color-border, #000);
				padding-bottom: var(--cards-query-interior-padding, 40px);
			}
		}
	}

	&:hover,
	&:focus-within {

		@mixin post-card-hover-focus;
	}
}

/* -----------------------------------------------------------------------
 * Post Card - Inner
 * ----------------------------------------------------------------------- */

.c-post-card__inner {
	display: flex;
	flex-direction: column;
	gap: var(--spacer-20);

	.c-post-card--layout-horizontal & {
		flex-direction: row-reverse;
		align-items: center;
		justify-content: flex-end;
		gap: var(--spacer-30);
	}
}

/* -----------------------------------------------------------------------
 * Post Card - Image
 * Floated right in mobile widths (at this width, it matches the
 * search result post card)
 * ----------------------------------------------------------------------- */

.c-post-card__image {
	overflow: hidden;

	& img {
		transition: var(--transition);
	}
}

/* -----------------------------------------------------------------------
 * Post Card - Content
 * ----------------------------------------------------------------------- */

.c-post-card__content {
	display: flex;
	flex-direction: column;
	gap: var(--spacer-10);
}

/* -----------------------------------------------------------------------
 * Post Card - Primary Category
 * ----------------------------------------------------------------------- */

.c-post-card__primary-category {
	margin-top: 0 !important;
}

/* -----------------------------------------------------------------------
 * Post Card - Title
 * ----------------------------------------------------------------------- */

.c-post-card__title {
	margin-top: 0 !important;
}

/* -----------------------------------------------------------------------
 * Post Card - Metadata
 * ----------------------------------------------------------------------- */

.c-post-card__metadata {
	display: flex;
	flex-wrap: wrap;
	gap: 0 8px;
	margin-top: 0 !important;
	font-size: 0;
	line-height: 1;
}

/* -----------------------------------------------------------------------
 * Post Card - Excerpt
 *
 * Hides content after 3 lines
 *
 * ----------------------------------------------------------------------- */

.c-post-card__excerpt {
	margin-top: 0 !important;
	overflow: hidden;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 3;
}

/* -----------------------------------------------------------------------
 * Post Card - Link Overlay
 * ----------------------------------------------------------------------- */

.c-post-card__link-overlay {
	width: 100%;
	height: 100%;
	position: absolute;
	top: 0;
	left: 0;
	cursor: pointer;

	&:focus-visible {

		@mixin focus-visible;
	}

	.editor-styles-wrapper & {
		display: none;
	}
}

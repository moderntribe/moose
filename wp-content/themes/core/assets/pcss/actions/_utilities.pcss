/* -------------------------------------------------------------------------
 *
 * Utilities: Actions
 *
 * ------------------------------------------------------------------------- */

.a-btn {

	@mixin a-btn;
}

.a-btn--outlined {

	@mixin a-btn-outlined;
}

.a-btn--ghost {

	@mixin a-btn-ghost;
}

.a-btn--link {

	@mixin a-link;
}

/* -------------------------------------------------------------------------
 *
 * Variables: Actions
 *
 * ------------------------------------------------------------------------- */

:root {

	/* -----------------------------------------------------------------------
	 * Themed Color Properties
	 * ----------------------------------------------------------------------- */

	--color-btn-background-color: var(--color-blue);
	--color-btn-color: var(--color-white);
	--color-btn-arrow-color: var(--color-white);
	--color-btn-hover-background-color: var(--color-black);

	--color-outlined-btn-background-color: transparent;
	--color-outlined-btn-border-color: var(--color-black);
	--color-outlined-btn-color: var(--color-black);
	--color-outlined-btn-arrow-color: var(--color-black);
	--color-outlined-btn-hover-background-color: var(--color-black);
	--color-outlined-btn-hover-color: var(--color-white);
	--color-outlined-btn-hover-arrow-color: var(--color-white);

	--color-ghost-btn-color: var(--color-blue);
	--color-ghost-btn-arrow-color: var(--color-blue);
	--color-ghost-btn-hover-background-color: transparent;
	--color-ghost-btn-hover-color: var(--color-black);
	--color-ghost-btn-hover-arrow-color: var(--color-black);

	--color-link-color: var(--color-blue);
	--color-link-hover-color: var(--color-black);

	/* -----------------------------------------------------------------------
	 * Focus
	 * ----------------------------------------------------------------------- */

	--color-focus-contrast-light: var(--color-black); /* outer border */
	--color-focus-contrast-dark: var(--color-white); /* inner border */
}

/* -------------------------------------------------------------------------
 *
 * Color Theme: White / Light
 *
 * ------------------------------------------------------------------------- */

:--light-themes {

	/* -----------------------------------------------------------------------
	 * Themed Color Properties
	 * ----------------------------------------------------------------------- */

	--themed-link-text-color: var(--color-black);
	--themed-link-hover-text-color: var(--color-blue);

	/* -----------------------------------------------------------------------
	 * Focus
	 * ----------------------------------------------------------------------- */

	--color-focus-contrast-light: var(--color-black); /* outer border */
	--color-focus-contrast-dark: var(--color-white); /* inner border */
}

/* -------------------------------------------------------------------------
 *
 * Color Theme: Dark
 *
 * ------------------------------------------------------------------------- */

:--dark-theme {

	/* -----------------------------------------------------------------------
	 * Themed Color Properties
	 * ----------------------------------------------------------------------- */

	--color-btn-background-color: var(--color-white);
	--color-btn-color: var(--color-black);
	--color-btn-arrow-color: var(--color-black);
	--color-btn-hover-background-color: var(--color-white);

	--color-outlined-btn-background-color: transparent;
	--color-outlined-btn-border-color: var(--color-white);
	--color-outlined-btn-color: var(--color-white);
	--color-outlined-btn-arrow-color: var(--color-white);
	--color-outlined-btn-hover-background-color: var(--color-white);
	--color-outlined-btn-hover-color: var(--color-black);
	--color-outlined-btn-hover-arrow-color: var(--color-black);

	--color-ghost-btn-color: var(--color-white);
	--color-ghost-btn-arrow-color: var(--color-white);
	--color-ghost-btn-hover-background-color: transparent;
	--color-ghost-btn-hover-color: var(--color-white);
	--color-ghost-btn-hover-arrow-color: var(--color-white);

	--color-link-color: var(--color-white);
	--color-link-hover-color: var(--color-white);

	/* -----------------------------------------------------------------------
	 * Focus
	 * ----------------------------------------------------------------------- */

	--color-focus-contrast-light: var(--color-white); /* outer border */
	--color-focus-contrast-dark: var(--color-black); /* inner border */
}

/* -------------------------------------------------------------------------
 *
 * Color Theme: Brand
 *
 * ------------------------------------------------------------------------- */

:--brand-theme {

	/* -----------------------------------------------------------------------
	 * Themed Color Properties
	 * ----------------------------------------------------------------------- */

	--themed-link-text-color: var(--color-white);
	--themed-link-hover-text-color: var(--color-neutral-10);

	/* -----------------------------------------------------------------------
	 * Focus
	 * ----------------------------------------------------------------------- */

	--color-focus-contrast-light: var(--color-white); /* outer border */
	--color-focus-contrast-dark: var(--color-blue); /* inner border */
}

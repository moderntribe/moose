:root {
	--masthead-primary-column-width: 160px;
	--masthead-navigation-item-column-width: 120px;
	--masthead-navigation-column-gap: var(--spacer-30);
	--masthead-navigation-accent-color: var(--color-blue);
	--themed-link-hover-text-color: var(--color-text);
}

.site-header {

	.site-header__cta:not(.cloned-mobile-element),
	.site-header__utility-nav:not(.cloned-mobile-element) {
		display: none;

		@media (--mq-navigation) {
			display: flex;
		}
	}

	*.cloned-mobile-element {
		display: flex;

		@media (--mq-navigation) {
			display: none;
		}
	}
}

.site-header__navigation-wrapper,
div.site-header__navigation-wrapper {
	display: grid;
	grid-template-areas:
		"logo toggle"
		"menu menu";
	justify-content: space-between;
	grid-template-columns: 1fr auto;

	.wp-block-site-title,
	.wp-block-site-logo {
		grid-area: logo;
	}

	.site-header__features {
		grid-area: toggle;
	}

	@media (--mq-navigation) {
		grid-template-areas: none;
		justify-content: unset;
		grid-template-columns: minmax(var(--masthead-primary-column-width), auto) 1fr minmax(var(--masthead-primary-column-width), auto);

		.site-header__features,
		.wp-block-site-title,
		.wp-block-site-logo {
			grid-area: unset;
		}
	}
}

.site-header__navigation {
	display: grid;
	grid-template-columns: 1fr;
	grid-gap: var(--masthead-navigation-column-gap);
	list-style: none;
	padding: 0;
	margin: 0;
	grid-area: menu;

	@media (--mq-navigation) {
		grid-area: unset;
		grid-template-columns: repeat(auto-fit, minmax(var(--masthead-navigation-item-column-width), auto));
		align-items: center;
		justify-content: center;
		grid-auto-flow: column;
		align-self: stretch;
		align-content: end;
	}

	.wp-block-tribe-mega-nav {
		margin: 0 auto;
	}
}

/* Utility Navigation Styles */
.site-header__utility-nav {

	.wp-block-navigation-item__content {

		@mixin inline-text-link;

		padding: 4px 0;
		font-weight: var(--font-weight-normal);
	}

	.wp-block-navigation-submenu__toggle {

		&[aria-expanded="true"] ~ ul.wp-block-navigation-submenu {
			z-index: 12;
		}
	}

	/* CASE: specifically target the submenu UL, not the LI with the same class generated by WP */
	ul.wp-block-navigation-submenu {
		display: flex;
		flex-flow: column nowrap;
		gap: var(--spacer-10);

		@media (--mq-navigation) {
			padding: var(--spacer-20);
			border-radius: var(--border-radius-s);
			border: 1px solid var(--color-neutral-30) !important;
			box-shadow: var(--box-shadow-30);
		}
	}
}

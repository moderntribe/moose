{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"slug": "light",
	"title": "Light",
	"blockTypes": [ "core/group" ],
	"styles": {
		"css": "--color-text-secondary: var(--color-neutral-50)",
		"color": {
			"background": "var(--wp--preset--color--neutral-10)",
			"text": "var(--wp--preset--color--black)"
		},
		"blocks": {
			"core/details": {
				"border": {
					"top": {
						"color": "var(--wp--preset--color--base-black)"
					},
					"bottom": {
						"color": "var(--wp--preset--color--base-black)"
					}
				}
			}
		},
		"elements": {
			"button": {
				"color": {
					"background": "var(--color-blue)",
					"text": "var(--wp--preset--color--white)"
				},
				":hover": {
					"color": {
						"background": "var(--color-dark-blue)",
						"text": "var(--wp--preset--color--base-white)"
					}
				},
				":focus": {
					"color": {
						"background": "var(--color-dark-blue)",
						"text": "var(--wp--preset--color--base-white)"
					}
				},
				":active": {
					"color": {
						"background": "var(--color-dark-blue)",
						"text": "var(--wp--preset--color--base-white)"
					}
				}
			}
		}
	}
}

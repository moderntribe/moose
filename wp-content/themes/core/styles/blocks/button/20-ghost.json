{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"slug": "ghost",
	"title": "Ghost",
	"blockTypes": [ "core/button" ],
	"styles": {
		"border": {
			"radius": "0"
		},
		"color": {
			"background": "var(--theme--button--ghost--background-color)",
			"text": "var(--theme--button--ghost--color)"
		},
		"spacing": {
			"padding": {
				"top": "0",
				"right": "0",
				"bottom": "0",
				"left": "0"
			}
		},
		"elements": {
			"button": {
				":hover": {
					"color": {
						"text": "var(--theme--button--ghost--hover--color) !important"
					}
				},
				":focus": {
					"color": {
						"text": "var(--theme--button--ghost--hover--color) !important"
					}
				},
				":active": {
					"color": {
						"text": "var(--theme--button--ghost--hover--color) !important"
					}
				}
			}
		}
	}
}

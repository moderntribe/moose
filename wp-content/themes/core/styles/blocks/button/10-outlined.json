{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"slug": "outlined",
	"title": "Outlined",
	"blockTypes": [ "core/button" ],
	"styles": {
		"color": {
			"background": "var(--theme--button--outlined--background-color)",
			"text": "var(--theme--button--outlined--color)"
		},
		"border": {
			"width": "1px",
			"color": "var(--theme--button--outlined--border-color)"
		},
		"spacing": {
			"padding": {
				"top": "var(--wp--preset--spacing--20)",
				"right": "var(--wp--preset--spacing--30)",
				"bottom": "var(--wp--preset--spacing--20)",
				"left": "var(--wp--preset--spacing--30)"
			}
		},
		"elements": {
			"button": {
				":hover": {
					"color": {
						"background": "var(--theme--button--outlined--hover--background-color) !important",
						"text": "var(--theme--button--outlined--hover--color) !important"
					}
				},
				":focus": {
					"color": {
						"background": "var(--theme--button--outlined--hover--background-color) !important",
						"text": "var(--theme--button--outlined--hover--color) !important"
					}
				},
				":active": {
					"color": {
						"background": "var(--theme--button--outlined--hover--background-color) !important",
						"text": "var(--theme--button--outlined--hover--color) !important"
					}
				}
			}
		}
	}
}

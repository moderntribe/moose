/**
 * Styles specific to this block
 */

.wp-block-outermost-social-sharing {
	--ssb-button-border-size: 1px;
	background: transparent;
	transition: var(--transition);

	/* styling and theming is only available for non-logo-only styles */
	&:not(.is-style-logos-only) {

		.outermost-social-sharing-link {
			background-color: var(--theme--ssb--button--background-color);
			color: var(--theme--ssb--button--color);
			fill: var(--theme--ssb--button--color);
			border: var(--ssb-button-border-size) solid var(--theme--ssb--button--border-color);

			&:hover,
			&:focus {
				background-color: var(--theme--ssb--button--hover--background-color);
				color: var(--theme--ssb--button--hover--color);
				fill: var(--theme--ssb--button--hover--color);
				border: var(--ssb-button-border-size) solid var(--theme--ssb--button--hover--border-color);
			}

			a:focus-visible {
				outline: none;
				outline-offset: 0;
				background-color: var(--theme--ssb--button--hover--background-color);
				color: var(--theme--ssb--button--hover--color);
				fill: var(--theme--ssb--button--hover--color);
				border-radius: var(--border-radius-full);
			}
		}
	}
}

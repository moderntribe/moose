/* -----------------------------------------------------------------------
 *
 * Search Block
 *
 * ----------------------------------------------------------------------- */

/* -----------------------------------------------------------------------
 * Search Block - Wrapper
 * ----------------------------------------------------------------------- */

.wp-block-search__inside-wrapper {

	/* CASE: Button Inside */
	.wp-block-search__button-inside & {
		align-items: center;
		gap: var(--spacer-20);
		padding: 0 var(--spacer-20) 0 0;
		background-color: var(--theme--search--background-color);
		border: 1px solid var(--theme--search--border-color);
		border-radius: 0;

		&:focus-within {
			border-color: var(--theme--search--focus-within--border-color);
		}
	}
}

/* -----------------------------------------------------------------------
 * Search Block - Input
 * ----------------------------------------------------------------------- */

.wp-block-search__input {

	/* CASE: Button Inside */
	.wp-block-search__button-inside & {

		@mixin t-body;
		padding: var(--spacer-20) 0 var(--spacer-20) var(--spacer-20);
		background-color: transparent;
		color: var(--theme--search--input--color);

		&::placeholder {
			color: var(--theme--search--input--placeholder--color);
		}
	}
}

/**
 * Hide default "X" icon in webkit browsers for search inputs
 */
.wp-block-search__input::-webkit-search-decoration,
.wp-block-search__input::-webkit-search-cancel-button,
.wp-block-search__input::-webkit-search-results-button,
.wp-block-search__input::-webkit-search-results-decoration {
	display: none;
}

/* -----------------------------------------------------------------------
 * Search Block - Button
 * ----------------------------------------------------------------------- */

.wp-block-search__button {

	/* CASE: Button Inside */
	.wp-block-search__button-inside & {
		width: 32px;
		height: 32px;
		margin-left: 0;
		background-color: transparent;
		border: 0;
		border-radius: 0;
		padding: 0;
		font-size: 0;

		&::before {
			content: '';
			display: block;
			width: 100%;
			height: 100%;
			mask: var(--icon-search) center no-repeat;
			mask-size: 24px;
			background-color: var(--theme--search--button--color);
		}

		svg {
			display: none;
		}

		&:focus-visible {

			@mixin focus-visible;
		}
	}
}

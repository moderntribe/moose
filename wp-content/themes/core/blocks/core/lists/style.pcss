/**
 * Styles specific to this block
 */

.wp-block-list {

	/* ----------------------------------------------------------------------
	 * CASE: Nested List Spacing
	 * ---------------------------------------------------------------------- */

	.wp-block-list {
		margin-top: var(--spacer-20);
	}

	/* ----------------------------------------------------------------------
	 * CASE: Sibling List Element Spacing
	 * ---------------------------------------------------------------------- */

	li ~ li {
		margin-top: var(--spacer-20);
	}

	/* ----------------------------------------------------------------------
	 * CASE: Ordered List
	 * ---------------------------------------------------------------------- */

	ol& {
		padding-inline-start: 1em;

		li {
			padding-inline-start: 10px;

			&::marker {
				font-weight: var(--font-weight-bold);
			}
		}
	}

	/* ----------------------------------------------------------------------
	 * CASE: Unordered List
	 * ---------------------------------------------------------------------- */

	ul& {
		padding-inline-start: 1em;

		li {
			padding-inline-start: 10px;
		}
	}
}

/* -------------------------------------------------------------------------
 *
 * Block - Icon Card - Styles - FE / Editor
 *
 * ------------------------------------------------------------------------- */

.b-icon-card {
	container: iconcard / inline-size;
	display: flex;
	flex-direction: column;
	width: 100%;
	height: 100%;
	position: relative;
	background-color: var(--color-white);
	border: 1px solid var(--color-black);
	border-radius: var(--border-radius-l);
	transition: var(--transition);

	&:focus-within {

		@mixin icon-card-hover-focus;
	}

	@media (--has-hover) {

		&:has(.b-icon-card__link-overlay):hover {

			@mixin icon-card-hover-focus;
		}
	}
}

/* -------------------------------------------------------------------------
 * Icon Card - Inner Wrapper
 * ------------------------------------------------------------------------- */

.b-icon-card__inner {
	flex: 1;
	display: flex;
	flex-direction: column;
	gap: var(--spacer-70);
	height: 100%;
	padding: var(--spacer-50) var(--spacer-40);
}

/* -------------------------------------------------------------------------
 * Icon Card - Content
 * ------------------------------------------------------------------------- */

.b-icon-card__content {
	margin-top: auto;
}

/* -------------------------------------------------------------------------
 * Icon Card - Title
 * ------------------------------------------------------------------------- */

.b-icon-card__title {
	margin-top: 0;
}

/* -------------------------------------------------------------------------
 * Icon Card - Description
 * ------------------------------------------------------------------------- */

.b-icon-card__description {
	margin-top: var(--spacer-20);
}

/* -------------------------------------------------------------------------
 * Icon Card - Buttons
 * Because we're using .json files for some button styles, they aren't
 * really available for custom blocks, we have to do some overrides here
 * to get the ghost button looking as it should.
 * ------------------------------------------------------------------------- */

.b-icon-card__buttons {
	margin-top: var(--spacer-30);

	.wp-block-button__link {

		.is-style-ghost & {
			background-color: transparent;
			border-radius: 0;
			color: var(--color-black);
		}
	}

	.is-style-dark & .wp-block-button {

		.wp-block-button__link {

			.is-style-ghost & {
				color: var(--color-black) !important;
			}
		}
	}
}

/* -------------------------------------------------------------------------
 * Icon Card - Link Overlay
 * ------------------------------------------------------------------------- */

.b-icon-card__link-overlay {
	display: block;
	width: calc(100% + 2px);
	height: calc(100% + 2px);
	position: absolute;
	top: -1px;
	left: -1px;
	z-index: 2;
	font-size: 0;

	&:focus-visible {

		@mixin focus-visible;
	}
}

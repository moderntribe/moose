/* -------------------------------------------------------------------------
 *
 * Block - Inline Notice - Styles - FE / Editor
 *
 * ------------------------------------------------------------------------- */

.b-inline-notice {
	--theme-color: var(--color-blue);
	--header-text-color: var(--color-white);
	border: 2px solid var(--theme-color);

	&.b-inline-notice--theme-dark {
		--header-text-color: var(--color-black);
	}
}

/* -------------------------------------------------------------------------
 * Inline Notice - Header
 * ------------------------------------------------------------------------- */

.b-inline-notice__header {
	display: flex;
	align-items: flex-start;
	gap: var(--spacer-20);
	padding: var(--spacer-20) var(--spacer-40);
	background-color: var(--theme-color);
}

/* -------------------------------------------------------------------------
 * Inline Notice - Icon Wrapper
 * ------------------------------------------------------------------------- */

.b-inline-notice__icon-wrapper {
	flex: 0 0 var(--icon-picker--icon-size);
	display: flex;
	align-items: center;
	box-sizing: border-box;
	justify-content: center;
	width: var(--icon-picker--icon-size);
	height: var(--icon-picker--icon-size);
	padding: var(--icon-picker--icon-padding);
	background-color: var(--icon-picker--background-color);
	border-radius: var(--icon-picker--border-radius);
	color: var(--icon-picker--icon-color);

	svg, img {
		display: block;
		width: 100%;
		height: 100%;
		object-fit: contain;
	}
}

/* -------------------------------------------------------------------------
 * Inline Notice - Heading
 * ------------------------------------------------------------------------- */

.b-inline-notice__heading {
	color: var(--header-text-color);

	a {
		--link-color: var(--header-text-color);
		--link-hover-color: var(--header-text-color);
	}
}

/* -------------------------------------------------------------------------
 * Inline Notice - Content
 * ------------------------------------------------------------------------- */

.b-inline-notice__content {
	padding: var(--spacer-20) var(--spacer-40);
	background-color: var(--color-white);

	> *:first-child {
		margin-top: 0;
	}

	> *:last-child {
		margin-bottom: 0;
	}
}

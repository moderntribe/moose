/**
 * The following styles get applied inside the editor only.
 *
 * Replace them with your own styles or remove the file completely.
 */

.wp-block-tribe-horizontal-tabs__tabs {
	gap: 0 !important;
	border: 1px solid var(--horizontal-tabs-editor-border-color);
}

.wp-block-tribe-horizontal-tabs__tab {
	position: relative;
	padding: var(--spacer-20);
	cursor: pointer;
	border-right: 1px solid var(--horizontal-tabs-editor-border-color);

	&.active-tab {
		position: relative;

		&::after {
			content: "";
			display: block;
			width: 100%;
			height: 1px;
			position: absolute;
			bottom: -1px;
			left: 0;
			background-color: var(--horizontal-tabs-editor-border-cutout);
		}
	}
}

.wp-block-tribe-horizontal-tabs__tab-label {
	cursor: text;
}

.wp-block-tribe-horizontal-tabs__tab-delete {
	padding: 0 !important;
	color: var(--horizontal-tabs-editor-delete-color) !important;

	&:hover,
	&:focus {
		color: var(--horizontal-tabs-editor-delete-hover-color) !important;
	}
}

.wp-block-tribe-horizontal-tabs__add {
	margin-left: var(--spacer-20);
}

.wp-block-tribe-horizontal-tabs__tab-content {
	border: 1px solid var(--horizontal-tabs-editor-border-color);
	border-top: 0;
	padding: var(--spacer-20);
}

{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "tribe/announcements",
	"version": "0.1.0",
	"title": "Announcements",
	"category": "theme",
	"icon": "megaphone",
	"description": "A block to display globally configured announcements",
	"attributes": {
		"announcement_id": {
			"type": "number",
			"default": 0
		},
		"heading": {
			"type": "string",
			"default": ""
		},
		"body": {
			"type": "string",
			"default": ""
		},
		"cta_label": {
			"type": "string",
			"default": ""
		},
		"cta_link": {
			"type": "string",
			"default": ""
		},
		"cta_style": {
			"type": "string",
			"default": "primary",
			"enum": ["primary", "secondary", "tertiary"]
		},
		"theme": {
			"type": "string",
			"default": "light",
			"enum": ["light", "brand", "black", "error"]
		},
		"dismissible": {
			"type": "boolean",
			"default": false
		}
	},
	"supports": {
		"html": false,
		"alignCustom": [ "wide", "grid", "full" ],
		"spacing": {
			"margin": true,
			"padding": false
		}
	},
	"textdomain": "tribe",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"render": "file:./render.php",
	"viewScript": "file:./view.js"
}

/* -------------------------------------------------------------------------
 *
 * Block - Image Card - Styles - FE / Editor
 *
 * ------------------------------------------------------------------------- */

.b-image-card {
	container: imagecard / inline-size;
	display: flex;
	flex-direction: column;
	width: 100%;
	height: 100%;
	position: relative;
	transition: var(--transition);

	&:focus-within {

		@mixin image-card-hover-focus;
	}

	@media (--has-hover) {

		&:has(.b-image-card__link-overlay):hover {

			@mixin image-card-hover-focus;
		}
	}
}

/* -------------------------------------------------------------------------
 * Image Card - Inner Wrapper
 * ------------------------------------------------------------------------- */

.b-image-card__inner {
	flex: 1;
	display: flex;
	flex-direction: column;
	height: 100%;
}

/* -------------------------------------------------------------------------
 * Image Card - Media
 * ------------------------------------------------------------------------- */

.b-image-card__media {
	overflow: hidden;

	img {
		transition: var(--transition);
	}
}

/* -------------------------------------------------------------------------
 * Image Card - Content
 * ------------------------------------------------------------------------- */

.b-image-card__content {
	flex: 1;
	display: flex;
	flex-direction: column;
	gap: var(--spacer-30);
	padding: var(--spacer-40);
	border-right: 1px solid var(--color-neutral-30);
	border-bottom: 1px solid var(--color-neutral-30);
	border-left: 1px solid var(--color-neutral-30);

	/* CASE: Dark Mode */
	.is-style-dark & {
		border-color: var(--color-neutral-70);
	}
}

/* -------------------------------------------------------------------------
 * Image Card - Content Top
 * ------------------------------------------------------------------------- */

.b-image-card__content-top {
	display: flex;
	flex-direction: column;
	gap: var(--spacer-10);
}

/* -------------------------------------------------------------------------
 * Image Card - Title
 * ------------------------------------------------------------------------- */

.b-image-card__title {
	margin-top: 0;
	text-decoration-thickness: from-font;
	text-decoration-color: transparent;
	text-decoration-line: underline;
	transition: var(--transition);
}

/* -------------------------------------------------------------------------
 * Image Card - Buttons
 * ------------------------------------------------------------------------- */

.b-image-card__buttons {
	margin-top: auto;
}

/* -------------------------------------------------------------------------
 * Image Card - Link Overlay
 * ------------------------------------------------------------------------- */

.b-image-card__link-overlay {
	display: block;
	width: 100%;
	height: 100%;
	position: absolute;
	top: 0;
	left: 0;
	z-index: 2;
	font-size: 0;

	&:focus-visible {

		@mixin focus-visible;
	}
}

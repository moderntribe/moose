.site-header-search__icon,
.site-header-search__overlay-form-submit {
	display: none;
	align-items: center;
	background-color: initial;
	border: 0;
	border-radius: 0;
	cursor: pointer;
	height: 32px;
	justify-content: center;
	width: 32px;
	padding: 0;
	color: var(--color-text);
	transition: var(--transition);

	@media (--mq-navigation) {
		display: flex;
	}

	&:hover,
	&:focus-visible {
		color: var(--masthead-navigation-accent-color);
	}
}

.site-header-search__overlay-form-submit {
	display: flex;
	color: var(--color-neutral-50);
}

.site-header-search__overlay {
	display: none;
	background: var(--color-white);
	padding: var(--spacer-20) 0;

	@media (--mq-navigation) {
		padding: var(--spacer-30) var(--wp--style--root--padding-left);
		position: absolute;
		left: 0;
		top: 100%;
		width: 100%;
		border-top: 1px solid var(--color-neutral-30);
		box-shadow: var(--box-shadow-30);
		visibility: hidden;
		z-index: -1;

		.active & {
			display: flex;
			visibility: visible;
			z-index: 10;
		}
	}

	&.in-mobile-menu {
		display: flex;
		visibility: visible;
		padding: 0;

		@media (--mq-navigation) {
			display: none;
		}
	}
}

.site-header-search__overlay-form {
	width: 100%;
	max-width: var(--grid-content-width);
	margin: 0 auto;
	display: grid;
	grid-template-columns: 1fr auto;
	grid-gap: var(--spacer-20);
	padding: var(--spacer-20);
	border: 1px solid var(--color-neutral-30);
	border-radius: var(--border-radius-s);
}

.site-header-search__overlay-form-input {
	border: 0;

	@mixin t-body;

	&:focus-visible {
		outline: none;
		border-bottom: 1px solid var(--color-neutral-20);
	}
}

/* -------------------------------------------------------------------------
 *
 * Block - Outermost Social Sharing - Variables
 *
 * ------------------------------------------------------------------------- */

:root {
	/* Navigation */
	--swiper-controls-size: 48px;
	--swiper-navigation-icon-width: 11px;
	--swiper-navigation-icon-height: 20px;

	/* Pagination */
	--swiper-pagination-bullet-size: 10px;
	--swiper-pagination-bullet-inactive-opacity: 0.3;
	--swiper-pagination-bullet-horizontal-gap: 6px;
}

:root,
:--light-themes {

	/* Navigation */	
	--swiper-navigation-color: var(--color-black);
	--swiper-navigation-border-color: var(--color-neutral-50);
	--swiper-navigation-hover-color: var(--color-black);
	--swiper-navigation-disabled-color: var(--color-neutral-50);
	--swiper-navigation-disabled-border-color: var(--color-neutral-50);
	--swiper-navigation-disabled-background-color: var(--color-neutral-30);

	/* Pagination */
	--swiper-theme-color: var(--color-black);
	--swiper-pagination-bullet-inactive-color: var(--color-black);
}

:--dark-themes {

	/* Navigation */
	--swiper-navigation-color: var(--color-white);
	--swiper-navigation-border-color: var(--color-white);
	--swiper-navigation-hover-color: var(--color-white);
	--swiper-navigation-disabled-color: var(--color-black);
	--swiper-navigation-disabled-border-color: var(--color-neutral-50);
	--swiper-navigation-disabled-background-color: var(--color-neutral-30);

	/* Pagination */
	--swiper-theme-color: var(--color-white);
	--swiper-pagination-bullet-inactive-color: var(--color-white);
}

:--brand-theme {

	/* Navigation */
	--swiper-navigation-disabled-color: var(--color-blue);
}
